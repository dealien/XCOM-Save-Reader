    "version": "0.2.0",
    "configurations": [
        {
            "name": "Save Reader Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "user/x-com-files/_quick_.asav",
                "-d",
                "-j"
            ],
            "preLaunchTask": "Copy Saves"
        },
        {
            "name": "Python: Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "test"
            ],
            "console": "integratedTerminal"
        }
    ]
}